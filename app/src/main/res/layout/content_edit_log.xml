<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tcc.utility.medtracker.EditLogActivity">

    <ScrollView
        android:id="@+id/scrollEditDailyLog"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#353535">

        <EditText
            android:id="@+id/editDailyLogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Enter text..."
            android:ems="10"
            android:fontFamily="@font/cousine"
            android:inputType="textMultiLine"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="normal" />
    </ScrollView>

</RelativeLayout>
